<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.jfuentes.warofsuits.presentation.viewmodel.GameVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green"
        android:padding="@dimen/general_padding"
        tools:context=".presentation.activity.GameActivity">

        <ImageView
            android:id="@+id/iv_discarded_card_player1"
            android:layout_width="@dimen/card_width_size"
            android:layout_height="@dimen/card_height_size"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/reverse_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/card_player1"
            layout="@layout/card_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            app:card="@{model.cardToPlay1}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_discarded_card_player1" />

        <ImageView
            android:id="@+id/iv_discarded_card_player2"
            android:layout_width="@dimen/card_width_size"
            android:layout_height="@dimen/card_height_size"
            android:layout_marginEnd="15dp"
            android:src="@drawable/reverse_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_discarded_card_player1" />

        <include
            android:id="@+id/card_player2"
            layout="@layout/card_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:card="@{model.cardToPlay2}"
            app:layout_constraintEnd_toEndOf="@id/iv_discarded_card_player2"
            app:layout_constraintTop_toTopOf="@id/card_player1" />

        <TextView
            style="@style/Base.TextAppearance.Text.Alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.winMessage}"
            android:visibility="@{model.player1WinMessageVisibility}"
            app:layout_constraintBottom_toTopOf="@+id/iv_player1_image"
            app:layout_constraintEnd_toEndOf="@id/tv_name_player1"
            app:layout_constraintStart_toStartOf="@id/tv_name_player1"
            tools:text="WIN"/>

        <TextView
            style="@style/Base.TextAppearance.Text.Alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.winMessage}"
            reverse_visibility="@{model.player1WinMessageVisibility}"
            app:layout_constraintBottom_toTopOf="@+id/iv_player2_image"
            app:layout_constraintEnd_toEndOf="@id/tv_name_player2"
            app:layout_constraintStart_toStartOf="@id/tv_name_player2"
            tools:text="WIN"/>

        <ImageView
            android:id="@+id/iv_player1_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_android_24"
            app:layout_constraintBottom_toTopOf="@id/tv_name_player1"
            app:layout_constraintEnd_toEndOf="@id/tv_name_player1"
            app:layout_constraintStart_toStartOf="@id/tv_name_player1" />

        <TextView
            android:id="@+id/tv_name_player1"
            style="@style/Base.TextAppearance.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="15dp"
            android:text="@{model.player1.name}"
            app:layout_constraintBottom_toTopOf="@+id/tv_player1_cards_won"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Player 1" />

        <TextView
            android:id="@+id/tv_player1_cards_won"
            style="@style/Base.TextAppearance.Text.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.player1CardsWonText}"
            app:layout_constraintEnd_toEndOf="@id/tv_name_player1"
            app:layout_constraintStart_toStartOf="@id/tv_name_player1"
            app:layout_constraintBottom_toTopOf="@+id/tv_priority_suit"
            tools:text="1 cards won" />

        <ImageView
            android:id="@+id/iv_player2_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_android_24"
            app:layout_constraintBottom_toTopOf="@id/tv_name_player2"
            app:layout_constraintEnd_toEndOf="@id/tv_name_player2"
            app:layout_constraintStart_toStartOf="@id/tv_name_player2" />

        <TextView
            android:id="@+id/tv_name_player2"
            style="@style/Base.TextAppearance.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="@{model.player2.name}"
            app:layout_constraintBottom_toBottomOf="@id/tv_name_player1"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Player 2" />

        <TextView
            style="@style/Base.TextAppearance.Text.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.player2CardsWonText}"
            app:layout_constraintEnd_toEndOf="@id/tv_name_player2"
            app:layout_constraintStart_toStartOf="@id/tv_name_player2"
            app:layout_constraintTop_toTopOf="@id/tv_player1_cards_won"
            tools:text="3 cards won" />

        <TextView
            android:id="@+id/tv_priority_suit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/btn_next_round"
            app:layout_constraintStart_toStartOf="@id/btn_next_round"
            app:layout_constraintEnd_toEndOf="@id/btn_next_round"
            tools:text="Suit priotiry"
            android:layout_marginBottom="10dp"
            android:text="@{model.suiPriority}"/>

        <Button
            android:id="@+id/btn_next_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="@{(v) -> model.onNextRoundClick(v)}"
            android:enabled="@{model.buttonEnable}"
            android:textSize="@dimen/text_small"
            android:text="@string/next_round"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


